<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core">
    <td>
        <j:set var="p" value="${col.getPropertyOf(job)}"/>
        <j:if test="${p.homepage != null}">
            <a href="${p.homepage}">${p.description}</a>
        </j:if>
        <j:if test="${p.homepage == null}">
            ${p.description}
        </j:if>
    </td>
</j:jelly>